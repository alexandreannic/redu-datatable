{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "target": "es5",
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "compile",
    "build",
    "./src/test/**"
  ]
}
